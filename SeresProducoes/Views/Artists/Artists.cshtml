@model IEnumerable<Artist>

@{
    ViewData["Title"] = "Artists";
}

<div class="container pt-3 pb-3">
    <h1 class="pb-3" style="font-family: Impact; font-size: 40pt; padding-left: 40px;top:0;">ARTISTS</h1>

    <div class="row">
        @foreach (Artist a in Model)
        {
            <div class="col pt-3 pb-5">
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <img src="@a.Image" alt="@a.Name" style="width:250px;">
                        </div>
                        <div class="flip-card-back glow">
                            <div id="content">
                                <h3>
                                    <a asp-controller="Artists" asp-action="Details" asp-route-id="@a.Id">@a.Name</a>
                                </h3>

                                <a href="@a.FacebookLink"><span class="fab fa-facebook-square fa-2x"></span></a>
                                <a href="@a.TwitterLink"><span class="fab fa-twitter-square fa-2x"></span></a>
                                <a href="@a.SoundCloudLink"><span class="fab fa-soundcloud fa-2x " style="color: orangered"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="pt-5 text-center">
        <h4>For booking our artists:</h4>
        <p>
            <a href="mailto:seresproducoes@gmail.com?Subject=Request%20to%20book%20an%20artist" target="_top">booking@seresproducoes.com</a>
        </p>
    </div>
</div>