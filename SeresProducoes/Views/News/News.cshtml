@model IEnumerable<Article>
@{
    ViewData["Title"] = "News";
}
<!-- TO DO: DONE -->
<div class="container pb-3">
    <div class="text-center">
        <h1 class="display-4 text-primary">News</h1>
        <img src="~/images/Radio.jpg" style="width:200px" alt="News section" />
        <br />
        <p style="font-size: 18pt">
            Get to read exciting articles about the label, its artists and musical advancements.
        </p>
    </div>
    <!-- Carousel -->
    <div id="CarouselTarget" class="carousel slide carousel-fade" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#CarouselTarget" data-slide-to="0" class="active"></li>
            <li data-target="#CarouselTarget" data-slide-to="1"></li>
            <li data-target="#CarouselTarget" data-slide-to="2"></li>
            <li data-target="#CarouselTarget" data-slide-to="3"></li>
            <li data-target="#CarouselTarget" data-slide-to="4"></li>
            <li data-target="#CarouselTarget" data-slide-to="5"></li>
        </ol>
        <div class="carousel-inner text-center">
            <!-- Items -->
            <div class="carousel-item active" data-interval="5000">
                <img src="~/images/articles/n01.jpeg" class="vh-100" alt="News">
                <div class="carousel-caption">
                    <h5>.</h5>
                    <p>.</p>
                </div>
            </div>
            @foreach (Article article in @Model)
            {
                <div class="carousel-item" data-interval="5000">
                    <h1 ><a href="@article.Link" class="bg-light" style="opacity:0.6">@article.Headline</a></h1>
                    <img src="@article.Image" class="vh-100" alt="@article.Headline">
                    <div class="carousel-caption">
                        <div class="text-primary bg-light">
                            <p class="bg-info text-white">
                                Date: @article.Date.ToString("dd/MM/yyyy")
                            </p>
                            <p>
                                @article.Content
                                <a href="@article.Link" class="text-danger">[read more]</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Items -->
        <!-- Controls -->
        <a class="carousel-control-prev" href="#CarouselTarget" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#CarouselTarget" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <!-- Controls -->
    </div>
    <!-- Carousel -->
</div>
